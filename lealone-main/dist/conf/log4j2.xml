<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%-4level %date{HH:mm:ss.SSS} %msg%n" />
        </Console>
        <RollingFile name="RollingFile" fileName="${env:LEALONE_HOME}/log/lealone.log"
            filePattern="${env:LEALONE_HOME}/log/lealone.log.%i.zip">
            <PatternLayout pattern="%-4level [%thread] [%date{ISO8601}] %msg%n" />
            <Policies>
                <SizeBasedTriggeringPolicy size="20MB" />
            </Policies>
            <DefaultRolloverStrategy min="1" max="20" />
        </RollingFile>
    </Appenders>

    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="Console" />
            <AppenderRef ref="RollingFile" />
        </Root>
    </Loggers>
</Configuration>
